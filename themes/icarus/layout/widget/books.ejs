<% const books = get_config_from_obj(widget, 'books'); %>
<% if (books !== null) { %>
<div class="card widget">
    <div class="card-content">
        <div class="menu">
            <h3 class="menu-label">
                <%= __('widget.books') %>
            </h3>
            <ul class="menu-list" style="display: flex;flex-wrap:wrap">
                <% for (let book of books) { %>
                <li style="flex: 1;margin:0 10px 10px 0">
                    <a href="<%- book.link %>" target="_blank">
                        <img style="width: 90px;height:120px" src="<%- book.thumbnail %>" alt="<%- book.title %>" />
                    </a>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</div>
<% } %>