<% const books = get_config_from_obj(widget, 'books'); %>
<% if (books !== null) { %>
<div class="card widget">
    <div class="card-content">
        <div class="menu">
            <h3 class="menu-label">
                <%= __('widget.books') %>
            </h3>
            <ul class="menu-list" style="display: flex;flex-wrap:wrap">
                <% for (let book of books) { %>
                <li style="margin:0 10px 10px 0">
                    <div style="display: flex;">
                        <img src="<%- book.thumbnail %>" width="100" alt="<%- book.title %>" />
                        <div style="flex:1;margin-left:8px;line-height: 2;">
                            <div style="font-weight: bold;"><%- book.title%></div>
                            <div style="font-size: 12px;color: #666;">出版日期：<%- book.pubdate%></div>
                            <div>
                                <a style="display: inline-block;color: white;background: #dc3545;border-radius: 4px;" href="<%- book.buyLink%>" target="_blank">购买</a>
                                <a style="display: inline-block;color: white;background: #007bff;border-radius: 4px;" href="<%- book.detailLink%>" target="_blank">详情</a>
                            </div>
                        </div>
                        </a>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</div>
<% } %>